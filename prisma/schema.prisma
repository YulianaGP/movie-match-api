generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum Genre {
  ACTION
  COMEDY
  DRAMA
  HORROR
  SCIFI
  THRILLER
}

model Movie {
  id          Int      @id @default(autoincrement())
  title       String
  year        Int
  genre       Genre[]
  rating      Float
  director    String
  description String
  reviews     Review[]
}

model Review {
  id        Int      @id @default(autoincrement())
  movieId   Int
  author    String
  rating    Int
  comment   String
  createdAt DateTime @default(now())
  movie     Movie    @relation(fields: [movieId], references: [id], onDelete: Cascade)
}
